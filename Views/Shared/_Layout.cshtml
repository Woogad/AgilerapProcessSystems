@{
    string? userSession = Context.Session.GetString(Agile.SessionName.UserSession.ToString());
}
<p></p>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgilerapProcessSystems</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgilerapProcessSystems.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-multiselect.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgilerapProcessSystems</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- use me-auto here... -->
                    <div class="navbar-nav me-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Work" asp-action="Index">Work</a>
                    </div>
                    <!-- ...or use ms-auto here -->
                    <div class="navbar-nav">
                        @if (userSession == null)
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Login"><span class="btn btn-outline-warning btn-md">Login</span></a>
                            <a class="nav-link" asp-controller="Home" asp-action="Register"><span class="btn btn-outline-secondary btn-md">Register</span></a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Logout"><span class="btn btn-outline-danger btn-md">Logout</span></a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2567 - AgilerapProcessSystems - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-multiselect.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
