@model IEnumerable<Work>

@{
    Work workTitle = new Work();
    int? historyID = ViewBag.HistoryID;
    string? historyText = ViewBag.HistoryText;
}

<div class="row">
    <div class="col">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => workTitle.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.Project)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.CreateByID)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.Provider)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(m => workTitle.Remark)
                </th>
            </tr>
            <tbody>
                @Html.DisplayFor(m => m, new { IsDisplayManage = false })
                <tr>
                    <td>
                        @Html.ActionLink("Create task", "Create", "Work")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-3">
        <a asp-action="Index" class="btn btn-danger btn-sm">Close</a><br />
        @if (historyText != null)
        {
            @Html.DisplayName(historyText)
        }
        else
        {
            @foreach (var i in Model)
            {
                if (i.ID == historyID)
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>No</th>
                            <th class="w-75">Changed Content</th>
                        </tr>
                        <tbody>
                            @Html.DisplayFor(m => i.WorkLog)
                        </tbody>
                    </table>
                }
            }
        }
    </div>
</div>
